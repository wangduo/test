<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  <TextView
  	android:id="@+id/textView1"
  	android:textAppearance="?android:attr/textAppearanceLarge"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:layout_alignParentTop="true" 
	android:layout_alignParentLeft="true"
	android:layout_marginLeft="21dp" 
	android:layout_marginTop="27dp"
	android:text="请填写安全手机号码,安全手机号码具有以下作用
* sim卡被更换后接受到短信" 
  />
  <TextView
  	android:id="@+id/textView2"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:text="输入安全号码"
  	android:layout_below="@+id/textView1"
  	android:layout_above="@+id/safenumber" 
  	android:layout_alignLeft="@+id/textView1"
  	android:layout_marginTop="45dp"
  />
  <EditText
  	android:id="@+id/safenumber"
  	android:layout_width="180dp"
  	android:layout_height="wrap_content"
  	android:layout_alignLeft="@+id/textView2"
  	android:layout_above="@+id/textView3" 
  />
  <TextView 
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content" 
	android:id="@+id/textView3"
	android:text="输入短信内容" 
	android:layout_centerVertical="true" 
	android:layout_alignLeft="@+id/safenumber"
	android:layout_above="@+id/safemessage"
	android:layout_marginTop="10dp"
  />
  <Button
  	android:id="@+id/button2"  
   	android:layout_width="wrap_content"
   	android:layout_height="wrap_content" 
   	android:layout_above="@+id/textView3"
   	android:layout_alignRight="@+id/button1"
   	android:text="选择联系人" 
   	android:onClick="selectContacts"
   />
  <Button
  	android:id="@+id/button3" 
   	android:layout_width="wrap_content"
   	android:layout_height="wrap_content" 
   	android:layout_alignTop="@+id/button1"
   	android:layout_alignLeft="@+id/safenumber"
   	android:text="上一步"
   	android:onClick="configstep2pre"
   	/>
  <Button
  	android:id="@+id/button1"  
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:layout_marginRight="18dp"
    android:layout_marginBottom="18dp"  
    android:text="下一步"
    android:onClick="configstep2next"
   />
  <EditText 
	android:id="@+id/safemessage"   
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content" 
  	android:lines="4"
  	android:layout_above="@+id/button1"
  	android:layout_alignLeft="@+id/button3" 
  	android:layout_alignRight="@+id/button1"
  >
	<requestFocus></requestFocus>
  </EditText>
</RelativeLayout>
